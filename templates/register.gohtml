{{define "register"}}
<!DOCTYPE html>
<html lang="en">
{{template "head" .}}
<body>
    <div class="loginContent">
        <div class="loginBox">
            <img class="invert" alt="dungeon icon" src="/static/img/dungeon.svg">
            <form class="loginForm" method="POST" action="/handler/frontend/register">
                <h2 class="text">Register</h2>
                <label class="text" for="username">Username</label>
                <input class="input" id="username" required>
                <label class="text" for="password">Password</label>
                <input class="input" type="password" id="password" required>
                <button class="button">Register</button>
                <hr>
                <a class="button" href="/login">Login instead</a>
            </form>
        </div>
    </div>
</body>
</html>
{{end}}